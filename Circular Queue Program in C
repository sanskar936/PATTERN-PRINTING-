#include <stdio.h>
#include <string.h>

struct Student {
    int rollNo;
    char name[50];
    char program[30];
    char course[30];
    float marks[5];
    float total, average;
};

int main() {
    struct Student s[100];
    int n, i, j;
    int searchRoll, found = 0;

    printf("Enter number of students: ");
    scanf("%d", &n);

    // Input records
    for (i = 0; i < n; i++) {
        s[i].total = 0;
        printf("\nEnter details for student %d\n", i + 1);
        printf("Roll No: ");
        scanf("%d", &s[i].rollNo);
        printf("Name: ");
        scanf("%s", s[i].name);
        printf("Program: ");
        scanf("%s", s[i].program);
        printf("Course: ");
        scanf("%s", s[i].course);
        printf("Enter 5 subject marks: ");
        for (j = 0; j < 5; j++) {
            scanf("%f", &s[i].marks[j]);
            s[i].total += s[i].marks[j];
        }
        s[i].average = s[i].total / 5.0;
    }

    // Display all records
    printf("\n--- Student Records ---\n");
    for (i = 0; i < n; i++) {
        printf("\nRoll No: %d\nName: %s\nProgram: %s\nCourse: %s\nTotal: %.2f\nAverage: %.2f\n",
               s[i].rollNo, s[i].name, s[i].program, s[i].course, s[i].total, s[i].average);
    }

    // Search record
    printf("\nEnter Roll No to search: ");
    scanf("%d", &searchRoll);
    for (i = 0; i < n; i++) {
        if (s[i].rollNo == searchRoll) {
            found = 1;
            printf("\nRecord Found:\n");
            printf("Name: %s | Total: %.2f | Average: %.2f\n", s[i].name, s[i].total, s[i].average);
            break;
        }
    }
    if (!found)
        printf("Record not found!\n");

    // Sort by total (Bubble sort)
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (s[j].total < s[j + 1].total) {
                struct Student temp = s[j];
                s[j] = s[j + 1];
                s[j + 1] = temp;
            }
        }
    }

    printf("\n--- Sorted by Total (Descending) ---\n");
    for (i = 0; i < n; i++) {
        printf("Roll No: %d | Name: %s | Total: %.2f | Avg: %.2f\n",
               s[i].rollNo, s[i].name, s[i].total, s[i].average);
    }

    return 0;
}