#include <stdio.h>
struct Product
{
    int id;
    char name[50];
    float cost;
};
int main()
{
    int n, i, j, minIdx;
    struct Product temp, key;
    printf("Enter number of products: ");
    scanf("%d", &n);
    struct Product products[n], tempProducts[n];
    // Input from user
    printf("\nEnter product details (ID Name Cost):\n");
    for (i = 0; i < n; i++)
    {
        printf("Enter Data for product %d: ", i + 1);
        scanf("%d %s %f", &products[i].id, products[i].name, &products[i].cost);
    }
    
    //Bubble Sort
    for (i = 0; i < n; i++)
    {
        tempProducts[i] = products[i];
    }
    int bubbleIterations = 0, bubbleComparisons = 0, bubbleSwaps = 0;
    for (i = 0; i < n - 1; i++)
    {
        bubbleIterations++;
        for (j = 0; j < n - i - 1; j++)
        {
            bubbleComparisons++;
            if (tempProducts[j].cost > tempProducts[j + 1].cost)
            {
                temp = tempProducts[j];
                tempProducts[j] = tempProducts[j + 1];
                tempProducts[j + 1] = temp;
                bubbleSwaps++;
            }
        }
    }
    printf("\nProducts Sorted by Cost (Bubble Sort):\n");
    printf("ID\tName\t\tCost\n");
    for (i = 0; i < n; i++)
    {
        printf("%d\t%-15s %.2f\n", tempProducts[i].id, tempProducts[i].name, tempProducts[i].cost);
    }
    printf("\nIterations: %d\nComparisons: %d\nSwaps: %d\n", bubbleIterations, bubbleComparisons, bubbleSwaps);
    
    //Selection Sort
    for (i = 0; i < n; i++)
    {
        tempProducts[i] = products[i];
    }
    int selIterations = 0, selComparisons = 0, selSwaps = 0;
    for (i = 0; i < n - 1; i++)
    {
        selIterations++;
        minIdx = i;
        for (j = i + 1; j < n; j++)
        {
            selComparisons++;
            if (tempProducts[j].cost < tempProducts[minIdx].cost)
            {
                minIdx = j;
            }
        }
        if (minIdx != i)
        {
            temp = tempProducts[i];
            tempProducts[i] = tempProducts[minIdx];
            tempProducts[minIdx] = temp;
            selSwaps++;
        }
    }
    printf("\nProducts Sorted by Cost (Selection Sort):\n");
    printf("ID\tName\t\tCost\n");
    for (i = 0; i < n; i++)
    {
        printf("%d\t%-15s %.2f\n", tempProducts[i].id, tempProducts[i].name, tempProducts[i].cost);
    }
    printf("\nIterations: %d\nComparisons: %d\nSwaps: %d\n", selIterations, selComparisons, selSwaps);
    
    //Insertion Sort
    for (i = 0; i < n; i++)
    {
        tempProducts[i] = products[i];
    }
    int insIterations = 0, insComparisons = 0, insSwaps = 0;
    for (i = 1; i < n; i++)
    {
        insIterations++;
        key = tempProducts[i];
        j = i - 1;
        while (j >= 0)
        {
            insComparisons++;
            if (tempProducts[j].cost > key.cost)
            {
                tempProducts[j + 1] = tempProducts[j];
                insSwaps++;
                j--;
            }
            else
            {
                break;
            }
        }
        tempProducts[j + 1] = key;
    }
    printf("\nProducts Sorted by Cost (Insertion Sort):\n");
    printf("ID\tName\t\tCost\n");
    for (i = 0; i < n; i++)
    {
        printf("%d\t%-15s %.2f\n", tempProducts[i].id, tempProducts[i].name, tempProducts[i].cost);
    }
    printf("\nIterations: %d\nComparisons: %d\nSwaps: %d\n", insIterations, insComparisons, insSwaps);
} 
